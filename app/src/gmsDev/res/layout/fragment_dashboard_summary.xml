<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:scrollbars="none"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <me.blog.korn123.easydiary.views.FixedCardView
            android:id="@+id/cardDriveBackup"
            android:layout_width="wrap_content"
            style="@style/card_dashboard">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <me.blog.korn123.easydiary.views.FixedTextView
                        app:applyGlobalSize="false"
                        app:applyGlobalColor="true"
                        app:applyHighLight="false"
                        android:padding="10dp"
                        android:text="@string/dashboard_title_backup_drive"
                        android:textSize="@dimen/dashboard_text_large"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <me.blog.korn123.easydiary.views.FixedCardView
                    style="@style/card_dashboard">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <me.blog.korn123.easydiary.views.FixedTextView
                            android:id="@+id/topLabelGmsCard1"
                            android:layout_marginStart="10dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:applyGlobalSize="false"
                            app:applyGlobalColor="true"
                            android:text="@string/last_diary_backup_time"
                            android:textSize="@dimen/dashboard_text_medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <me.blog.korn123.easydiary.views.FixedTextView
                            android:layout_marginStart="10dp"
                            app:layout_constraintTop_toBottomOf="@+id/topLabelGmsCard1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:applyGlobalSize="false"
                            app:applyGlobalColor="true"
                            tools:text="2020 11 27"
                            android:id="@+id/diaryBackupUsingGMS"
                            android:textSize="@dimen/dashboard_text_small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </me.blog.korn123.easydiary.views.FixedCardView>
                <me.blog.korn123.easydiary.views.FixedCardView
                    style="@style/card_dashboard">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <me.blog.korn123.easydiary.views.FixedTextView
                            android:id="@+id/topLabelGmsCard2"
                            android:layout_marginStart="10dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:applyGlobalSize="false"
                            app:applyGlobalColor="true"
                            android:text="@string/last_photo_backup_time"
                            android:textSize="@dimen/dashboard_text_medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <me.blog.korn123.easydiary.views.FixedTextView
                            app:layout_constraintTop_toBottomOf="@+id/topLabelGmsCard2"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginStart="10dp"
                            app:applyGlobalSize="false"
                            app:applyGlobalColor="true"
                            tools:text="2020 11 27"
                            android:id="@+id/attachedPhotoBackupUsingGMS"
                            android:textSize="@dimen/dashboard_text_small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </me.blog.korn123.easydiary.views.FixedCardView>
            </LinearLayout>
        </me.blog.korn123.easydiary.views.FixedCardView>

        <me.blog.korn123.easydiary.views.FixedCardView
            android:id="@+id/cardLocalBackup"
            android:layout_width="wrap_content"
            style="@style/card_dashboard">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <me.blog.korn123.easydiary.views.FixedTextView
                        app:applyGlobalSize="false"
                        app:applyGlobalColor="true"
                        app:applyHighLight="false"
                        android:padding="10dp"
                        android:text="@string/dashboard_title_backup_local"
                        android:textSize="@dimen/dashboard_text_large"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <me.blog.korn123.easydiary.views.FixedCardView
                    style="@style/card_dashboard">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <me.blog.korn123.easydiary.views.FixedTextView
                            android:id="@+id/topLabelLocalCard1"
                            android:layout_marginStart="10dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:applyGlobalSize="false"
                            app:applyGlobalColor="true"
                            android:text="@string/last_diary_backup_time"
                            android:textSize="@dimen/dashboard_text_medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <me.blog.korn123.easydiary.views.FixedTextView
                            tools:text="2020 11 27"
                            app:layout_constraintTop_toBottomOf="@+id/topLabelLocalCard1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginStart="10dp"
                            app:applyGlobalSize="false"
                            app:applyGlobalColor="true"
                            android:id="@+id/diaryBackupLocal"
                            android:textSize="@dimen/dashboard_text_small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </me.blog.korn123.easydiary.views.FixedCardView>
            </LinearLayout>
        </me.blog.korn123.easydiary.views.FixedCardView>
    </LinearLayout>
</HorizontalScrollView>
