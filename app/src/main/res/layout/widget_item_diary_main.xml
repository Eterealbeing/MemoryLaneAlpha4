<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widgetItem"
    style="@style/LinearLayoutVertical"
    android:padding="5dp">

    <LinearLayout style="@style/LinearLayoutHorizontal">

        <ImageView
            android:id="@+id/diarySymbol"
            android:layout_width="@dimen/diary_symbol_width"
            android:layout_height="@dimen/diary_symbol_width"
            android:layout_marginEnd="10dp" />

        <LinearLayout
            style="@style/LinearLayoutVertical"
            android:layout_width="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/text1"
                style="@style/text_diary_main_item_inner_contents"
                android:gravity="center_vertical"
                android:textSize="@dimen/widget_text_medium"
                tools:text="Today is a very pleasant day." />

            <TextView
                android:id="@+id/text3"
                style="@style/text_diary_main_item_inner_contents"
                android:gravity="end"
                android:textSize="@dimen/widget_text_medium"
                tools:text="2020년 06월 22일 월요일 09:44" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/text2"
        style="@style/text_diary_main_item_inner_contents"
        android:layout_marginTop="@dimen/card_contents_padding"
        android:gravity="start"
        android:maxLines="3"
        android:textSize="@dimen/widget_text_medium"
        tools:text="Easy diary in a optimize to..." />
</LinearLayout>