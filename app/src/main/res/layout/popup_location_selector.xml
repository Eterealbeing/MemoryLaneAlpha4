<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="?attr/colorPrimary"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="@dimen/card_contents_padding"
            android:background="?attr/selectableItemBackground"
            android:id="@+id/modeInternal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.simplemobiletools.commons.views.MyTextView
                android:id="@+id/modeInternalTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.simplemobiletools.commons.views.MyTextView
                android:id="@+id/modeInternalDescription"
                android:alpha="0.7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:padding="@dimen/card_contents_padding"
            android:background="?attr/selectableItemBackground"
            android:id="@+id/modeExternal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.simplemobiletools.commons.views.MyTextView
                android:id="@+id/modeExternalTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.simplemobiletools.commons.views.MyTextView
                android:id="@+id/modeExternalDescription"
                android:alpha="0.7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

