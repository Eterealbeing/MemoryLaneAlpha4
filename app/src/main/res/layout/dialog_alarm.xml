<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        style="@style/AppCard"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.simplemobiletools.commons.views.MyTextView
                android:text="@string/schedule_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SettingsTitle"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/SettingsSummary"
                >
                <me.blog.korn123.easydiary.views.FixedTextView
                    android:id="@+id/text_alarm_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:textSize="44sp"
                    android:text="07:00"
                    app:applyGlobalSize="false"
                    app:applyGlobalColor="true"
                    />
                <com.simplemobiletools.commons.views.MyTextView
                    android:id="@+id/text_alarm_days"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_alarm_time"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:paddingStart="@dimen/tiny_margin"
                    android:textSize="@dimen/bigger_text_size"
                    tools:text="Mon, Tue, Wed, Thu, Fri"
                    />
                <LinearLayout
                    android:id="@+id/linear_alarm_days_holder"
                    android:gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_below="@+id/text_alarm_days"
                    android:layout_marginTop="@dimen/medium_margin"
                    android:orientation="horizontal"
                    />
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_alignTop="@+id/text_alarm_time"
                    android:layout_alignBottom="@id/text_alarm_time"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <ImageView
                        android:id="@+id/image_delete_alarm"
                        android:src="@drawable/ic_delete_w"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <com.simplemobiletools.commons.views.MySwitchCompat
                        android:id="@+id/switch_alarm"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingStart="@dimen/activity_margin"
                        android:paddingEnd="@dimen/medium_margin"
                        />
                </LinearLayout>
            </RelativeLayout>
            <View
                android:background="?attr/colorPrimary"
                android:layout_marginVertical="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                />
            <com.simplemobiletools.commons.views.MyTextView
                android:text="@string/schedule_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SettingsTitle"
                />
            <RadioGroup
                android:id="@+id/radio_group_work_mode"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/SettingsSummary"
                >
                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/radio_diary_writing"
                    android:gravity="top"
                    android:text="@string/schedule_diary_writing_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/radio_diary_backup_local"
                    android:gravity="top"
                    android:text="@string/schedule_backup_local_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/radio_diary_backup_gms"
                    android:gravity="top"
                    android:text="@string/schedule_backup_gms_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </RadioGroup>
            <View
                android:background="?attr/colorPrimary"
                android:layout_marginVertical="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                />
            <com.simplemobiletools.commons.views.MyTextView
                android:text="@string/schedule_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SettingsTitle"
                />
            <com.simplemobiletools.commons.views.MyEditText
                android:id="@+id/edit_alarm_description"
                android:paddingTop="0dp"
                android:hint="@string/schedule_description_hint"
                android:inputType="text|textAutoCorrect|textAutoComplete"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/SettingsSummary"
                >
            </com.simplemobiletools.commons.views.MyEditText>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>