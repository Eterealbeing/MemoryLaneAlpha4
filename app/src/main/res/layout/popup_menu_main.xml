<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="2dp"
        app:contentPadding="0dp"
        style="@style/AppCard">
        <LinearLayout
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.appcompat.widget.LinearLayoutCompat
                style="@style/linear_popup_menu_item"
                tools:visibility="visible"
                android:visibility="gone"
                android:id="@+id/devConsole">
                <androidx.appcompat.widget.AppCompatImageView
                    style="@style/image_view_popup_menu_icon"
                    android:src="@drawable/bug_2" />
                <me.blog.korn123.easydiary.views.FixedTextView
                    style="@style/text_view_popup_menu_item"
                    android:text="Dev Console"
                    android:paddingStart="10dp" />
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                style="@style/linear_popup_menu_item"
                android:id="@+id/postCard">
                <androidx.appcompat.widget.AppCompatImageView
                    android:src="@drawable/picture_w"
                    style="@style/image_view_popup_menu_icon" />
                <me.blog.korn123.easydiary.views.FixedTextView
                    style="@style/text_view_popup_menu_item"
                    android:text="@string/post_card"
                    android:paddingStart="10dp" />
            </androidx.appcompat.widget.LinearLayoutCompat>
            <me.blog.korn123.easydiary.views.FixedTextView
                style="@style/text_view_popup_menu_item"
                android:id="@+id/dashboard"
                android:text="@string/menu_dashboard" />
            <androidx.appcompat.widget.LinearLayoutCompat
                style="@style/linear_popup_menu_item"
                android:id="@+id/chart">
                <androidx.appcompat.widget.AppCompatImageView
                    android:src="@drawable/combo"
                    style="@style/image_view_popup_menu_icon" />
                <me.blog.korn123.easydiary.views.FixedTextView
                    style="@style/text_view_popup_menu_item"
                    android:text="@string/menu_chart"
                    android:paddingStart="10dp" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <me.blog.korn123.easydiary.views.FixedTextView
                android:id="@+id/settings"
                style="@style/text_view_popup_menu_item"
                android:text="@string/settings" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>


