<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:id="@+id/main_holder"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:orientation="vertical"
            style="@style/AppCard.Settings">
            <LinearLayout
                style="@style/LinearLayoutVertical">
                <com.simplemobiletools.commons.views.MyTextView
                    android:text="Action Log"
                    style="@style/SettingsTitle" />
                <com.simplemobiletools.commons.views.MyTextView
                    android:id="@+id/clearLog"
                    android:gravity="end"
                    android:text="Clear log"
                    style="@style/SettingsTitle" />
                <ScrollView
                    android:fillViewport="true"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">
                    <com.simplemobiletools.commons.views.MyTextView
                        android:id="@+id/actionLog"
                        android:layout_height="wrap_content"
                        style="@style/SettingsSummary" />
                </ScrollView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <ScrollView
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:padding="@dimen/card_layout_padding"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <me.blog.korn123.easydiary.views.FixedCardView
                    style="@style/card_view_dashboard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:id="@+id/leftLabel"
                            android:orientation="vertical"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content">
                            <me.blog.korn123.easydiary.views.FixedTextView
                                app:applyGlobalSize="false"
                                app:applyGlobalColor="false"
                                android:id="@+id/dayLabel"
                                android:gravity="center"
                                android:text="토"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"/>
                            <me.blog.korn123.easydiary.views.FixedTextView
                                app:applyGlobalSize="false"
                                app:applyGlobalColor="false"
                                android:id="@+id/dateLabel"
                                android:gravity="center"
                                android:text="20"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <me.blog.korn123.easydiary.views.FixedTextView
                            app:applyGlobalSize="false"
                            app:applyGlobalColor="false"
                            android:id="@+id/title"
                            android:textSize="15sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2020년 11월"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.flexbox.FlexboxLayout
                            app:layout_constraintTop_toBottomOf="@id/title"
                            app:layout_constraintStart_toEndOf="@+id/leftLabel"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            app:alignContent="stretch"
                            app:alignItems="stretch"
                            app:flexWrap="wrap">

                            <me.blog.korn123.easydiary.views.FixedCardView
                                app:contentPadding="5dp"
                                app:fixedAppcompatPadding="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    app:srcCompat="@drawable/ic_003_wallet" />
                            </me.blog.korn123.easydiary.views.FixedCardView>

                            <me.blog.korn123.easydiary.views.FixedCardView
                                app:contentPadding="5dp"
                                app:fixedAppcompatPadding="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    app:srcCompat="@drawable/ic_003_wallet" />
                            </me.blog.korn123.easydiary.views.FixedCardView>

                            <me.blog.korn123.easydiary.views.FixedCardView
                                app:contentPadding="5dp"
                                app:fixedAppcompatPadding="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    app:srcCompat="@drawable/ic_003_wallet" />
                            </me.blog.korn123.easydiary.views.FixedCardView>

                        </com.google.android.flexbox.FlexboxLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </me.blog.korn123.easydiary.views.FixedCardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/markdown1"
                    android:orientation="vertical"
                    style="@style/AppCard.Settings">
                    <LinearLayout
                        style="@style/LinearLayoutVertical">
                        <com.simplemobiletools.commons.views.MyTextView
                            android:text="package kotlin"
                            style="@style/SettingsTitle" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/markdown2"
                    android:orientation="vertical"
                    style="@style/AppCard.Settings">
                    <LinearLayout
                        style="@style/LinearLayoutVertical">
                        <com.simplemobiletools.commons.views.MyTextView
                            android:text="package kotlin.collections"
                            style="@style/SettingsTitle" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/markdown3"
                    android:orientation="vertical"
                    style="@style/AppCard.Settings">
                    <LinearLayout
                        style="@style/LinearLayoutVertical">
                        <com.simplemobiletools.commons.views.MyTextView
                            android:text="Cheat Sheet"
                            style="@style/SettingsTitle" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:orientation="vertical"
                    style="@style/AppCard.Settings">
                    <LinearLayout
                        style="@style/LinearLayoutVertical">
                        <com.simplemobiletools.commons.views.MyTextView
                            android:text="Location Manager"
                            style="@style/SettingsTitle" />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:id="@+id/locationToolbar"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <com.simplemobiletools.commons.views.MyTextView
                                    android:background="?attr/selectableItemBackgroundBorderless"
                                    android:id="@+id/requestLastLocation"
                                    android:text="Last-Location"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <com.simplemobiletools.commons.views.MyTextView
                                    android:background="?attr/selectableItemBackgroundBorderless"
                                    android:layout_marginStart="10dp"
                                    android:id="@+id/updateGPSProvider"
                                    android:text="Update-GPS"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <com.simplemobiletools.commons.views.MyTextView
                                    android:background="?attr/selectableItemBackgroundBorderless"
                                    android:layout_marginStart="10dp"
                                    android:id="@+id/updateNetworkProvider"
                                    android:text="Update-Network"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                            <com.simplemobiletools.commons.views.MyTextView
                                android:layout_below="@+id/locationToolbar"
                                android:id="@+id/locationManagerInfo"
                                tools:text="Korea Seoul..."
                                style="@style/SettingsSummary" />
                        </RelativeLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/nextAlarm"
                    android:orientation="vertical"
                    style="@style/AppCard.Settings">
                    <LinearLayout
                        style="@style/LinearLayoutVertical">
                        <com.simplemobiletools.commons.views.MyTextView
                            android:text="Next Alarm"
                            style="@style/SettingsTitle" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/fullBackupService"
                    android:orientation="vertical"
                    style="@style/AppCard.Settings">
                    <LinearLayout
                        style="@style/LinearLayoutVertical">
                        <com.simplemobiletools.commons.views.MyTextView
                            android:text="Full Backup Service"
                            style="@style/SettingsTitle" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/clearUnusedPhoto"
                    android:orientation="vertical"
                    style="@style/AppCard.Settings">
                    <LinearLayout
                        style="@style/LinearLayoutVertical">
                        <com.simplemobiletools.commons.views.MyTextView
                            android:text="Clear unused photo"
                            style="@style/SettingsTitle" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/notification1"
                    android:orientation="vertical"
                    style="@style/AppCard.Settings">
                    <LinearLayout
                        style="@style/LinearLayoutVertical">
                        <com.simplemobiletools.commons.views.MyTextView
                            android:text="Notification"
                            style="@style/SettingsTitle" />
                        <com.simplemobiletools.commons.views.MyTextView
                            android:text="Basic + Action"
                            style="@style/SettingsSummary" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/notification2"
                    android:orientation="vertical"
                    style="@style/AppCard.Settings">
                    <LinearLayout
                        style="@style/LinearLayoutVertical">
                        <com.simplemobiletools.commons.views.MyTextView
                            android:text="Notification"
                            style="@style/SettingsTitle" />
                        <com.simplemobiletools.commons.views.MyTextView
                            android:text="Basic + Action + CustomContentView"
                            style="@style/SettingsSummary" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
